<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="124dip"
        android:layout_height="124dip"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="8dip"
        android:contentDescription="@string/image_description_text"
        android:src="@drawable/ic_launcher" />
    
    <TextView
    	android:id="@+id/contact_last_name"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/contact_image"
    	android:layout_alignBottom="@id/contact_image"
    	android:layout_marginBottom="24dip"
    	android:layout_marginRight="6dip"
    	android:textSize="22sp"
    	android:text="@string/first_name_hint" />
    
    <TextView
    	android:id="@+id/contact_first_name"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_above="@id/contact_last_name"
    	android:layout_toRightOf="@id/contact_image"
    	android:layout_marginBottom="4dip"
    	android:textSize="22sp"
    	android:layout_marginRight="6dip"
    	android:text="@string/last_name_hint" />
    
    <LinearLayout
	    android:id="@+id/left"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/contact_image"
	    android:layout_marginLeft="16dip"
	    android:orientation="vertical" >
	        <TextView 
        android:id="@+id/mobile_number"
        android:text="@string/mobile"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="10dip"
    	android:layout_height="wrap_content"/>
	        
	            <TextView 
        android:id="@+id/Home_number"
        android:text="@string/home"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="13dip"
    	android:layout_height="wrap_content"/>

    <TextView 
        android:id="@+id/work_number"
        android:text="@string/work"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="13dip"
    	android:layout_height="wrap_content"/>

    <TextView 
        android:id="@+id/email_address"
        android:text="@string/email"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="13dip"
    	android:layout_height="wrap_content"/>

    <TextView 
        android:id="@+id/home_address"
        android:text="@string/home_address_text"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="13dip"
    	android:layout_height="wrap_content"/>
	    
        
	    </LinearLayout>
	    
	<LinearLayout
	    android:id="@+id/right"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/contact_image"
	    android:layout_toRightOf="@id/left"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="6dip"
	    android:orientation="vertical" >
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">	
		   <TextView
	        android:id="@+id/contact_mobile_number"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginRight="6dip"
	    	android:layout_centerVertical="true"
	    	android:textSize="20sp"
	    	android:text="@string/mobile_number_hint" />
		 
	   
	   <ImageButton
	       android:id="@+id/call_mobile_image"
	       android:layout_width="30dp"
	       android:layout_height="30dip"
	       android:layout_marginRight="6dp"
	       android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_gravity="bottom"
           android:clickable="true"
	       android:contentDescription="@string/mobile_call_description_text"
	       android:background="@drawable/device_access_call" />
	   
	   <ImageButton
	       android:id="@+id/text_mobile_image"
	       android:layout_width="30dp"
	       android:layout_height="30dip"
	       android:layout_marginRight="6dp"
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@id/call_mobile_image"
           android:layout_gravity="bottom"
           android:clickable="true"
	       android:contentDescription="@string/mobile_text_description_text"
	       android:background="@drawable/content_message" />
	        
	   </RelativeLayout>
	   
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">	
	            <TextView
        android:id="@+id/contact_home_number"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="6dip"
    	android:textSize="20sp"
    	android:layout_centerVertical="true"
    	android:layout_marginTop="6dip"
    	android:text="@string/home_number_hint"/>
	            
	            <ImageButton
	       android:id="@+id/call_home_image"
	       android:layout_width="30dp"
	       android:layout_height="30dip"
	       android:layout_marginRight="6dp"
	       android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_gravity="bottom"
           android:clickable="true"
	       android:contentDescription="@string/mobile_call_description_text"
	       android:background="@drawable/device_access_call" />
</RelativeLayout>
    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">	
    <TextView
        android:id="@+id/contact_work_number"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="6dip"
    	android:textSize="20sp"
    	android:layout_centerVertical="true"
    	android:layout_marginTop="6dip"
    	android:text="@string/work_number_hint" />
    
    <ImageButton
	       android:id="@+id/call_work_image"
	       android:layout_width="30dp"
	       android:layout_height="30dip"
	       android:layout_marginRight="6dp"
	       android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_gravity="bottom"
           android:clickable="true"
	       android:contentDescription="@string/mobile_call_description_text"
	       android:background="@drawable/device_access_call" />
    </RelativeLayout>
<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">	
    <TextView
        android:id="@+id/contact_email_address"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="6dip"
    	android:textSize="20sp"
    	android:layout_centerVertical="true"
    	android:layout_marginTop="6dip"
    	android:text="@string/email_address_hint" />
    
    <ImageButton
	       android:id="@+id/email_image"
	       android:layout_width="30dp"
	       android:layout_height="30dip"
	       android:layout_marginRight="6dp"
	       android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_gravity="bottom"
           android:clickable="true"
	       android:contentDescription="@string/mobile_call_description_text"
	       android:background="@drawable/content_email" />
    	
    	</RelativeLayout>    
    <TextView
        android:id="@+id/contact_home_address"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="6dip"
    	android:textSize="20sp"
    	android:layout_marginTop="6dip"
    	android:text="@string/home_address_hint" />


</LinearLayout>
</RelativeLayout>

	    
	
	      






    	




    	
    


